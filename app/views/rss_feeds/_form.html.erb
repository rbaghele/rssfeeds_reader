<div class="panel-body">
  <%= form_for(@rss_feed, {class: 'form-horizontal'}) do |f| %>
    <div class="form-group row">
      <label class="col-lg-2 control-label" for="inputEmail1">Name</label>
      <div class="col-lg-5">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-lg-2 control-label" for="inputPassword1">Url</label>
      <div class="col-lg-5">
        <%= f.text_field :url, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit "#{@rss_feed.new_record? ? 'Create' : 'Save'}", class: 'btn-u btn-u-green' %>
      </div>
    </div>
  <% end %>
</div>

<%= javascript_include_tag 'feed_validation' %>